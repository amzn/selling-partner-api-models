{
    "name": "spapi/auth-and-auth",
    "description": "This library provides helper classes for use when signing HTTP requests for Amazon Selling Partner APIs.",
    "version": "1.0",
    "type": "library",
    "keywords": [
        "sp-api",
        "amazon",
        "sdk",
        "openapi-generator",
        "php",
        "rest"
    ],
    "homepage": "https://developer-docs.amazon.com/sp-api",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Amazon API Services",
            "homepage": "https://developer-docs.amazon.com/sp-api"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^2.0",
        "aws/aws-sdk-php": "^3.228"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SpApi\\AuthAndAuth\\": "src/authandauth/"
        }
    },
    "autoload-dev": {
        "psr-4": { "SpApi\\Test\\AuthAndAuth\\" : "tests/authandauth/"
        }
    },
    "scripts": {
        "fix": "phpcs --standard=PSR12 src/authandauth tests/authandauth",
        "test": "phpunit tests/authandauth"
    }
}
